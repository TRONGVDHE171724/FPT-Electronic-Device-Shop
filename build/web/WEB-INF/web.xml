    <servlet>
        <servlet-name>UserRegisterController</servlet-name>
        <servlet-class>vn.fpt.edu.controller.UserRegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserRegisterGoogleController</servlet-name>
        <servlet-class>vn.fpt.edu.controller.UserRegisterGoogleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerHomeController</servlet-name>
        <servlet-class>vn.fpt.edu.controller.CustomerHomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserLogin</servlet-name>
        <servlet-class>vn.fpt.edu.controller.UserLoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserLoginGoogleController</servlet-name>
        <servlet-class>vn.fpt.edu.controller.UserLoginGoogleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserForgotPasswordController</servlet-name>
        <servlet-class>vn.fpt.edu.controller.UserForgotPasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserChangeProfileController</servlet-name>
        <servlet-class>vn.fpt.edu.controller.UserChangeProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerChangePasswordController</servlet-name>
        <servlet-class>vn.fpt.edu.controller.UserChangePasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserChangeImageController</servlet-name>
        <servlet-class>vn.fpt.edu.controller.UserChangeImageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListCategoryController</servlet-name>
        <servlet-class>homepage.controller.ListProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserLogoutController</servlet-name>
        <servlet-class>vn.fpt.edu.controller.UserLogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserRegisterGoogleController</servlet-name>
        <url-pattern>/registerGoogle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerHomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLoginGoogleController</servlet-name>
        <url-pattern>/loginGoogle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserForgotPasswordController</servlet-name>
        <url-pattern>/forgotpass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserChangeProfileController</servlet-name>
        <url-pattern>/userChangeProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerChangePasswordController</servlet-name>
        <url-pattern>/changePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserChangeImageController</servlet-name>
        <url-pattern>/chageImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListCategoryController</servlet-name>
        <url-pattern>/ListCategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLogoutController</servlet-name>
        <url-pattern>/userLogout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrendingCategory</servlet-name>
        <url-pattern>/trendingCategory</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/Page404.jsp</location>
    </error-page>
</web-app>
